<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Cours06.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cours06"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Cours06">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel>
        <TextBlock x:ConnectionId='2' x:Name="tblDemo" Text="Tralala" FontSize="14"/>
        <TextBox x:ConnectionId='3' x:Name="tbxDemo" Height="100" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <PasswordBox x:ConnectionId='4' x:Name="pbDemo" PasswordChar="*" IsPasswordRevealButtonEnabled="True" Margin="20" Width="300" HorizontalAlignment="Left"/>
        <ToggleSwitch x:ConnectionId='5' x:Name="swDemo"                          OnContent="Oui" OffContent="Non"/>
        <Slider x:ConnectionId='6' x:Name="sldDemo" Minimum="2" Maximum="140" Value="14" StepFrequency="2"                                    />
        <NumberBox x:ConnectionId='7' x:Name="nbxDemo" Minimum="20" Maximum="500" Value="20" SmallChange="20" AcceptsExpression="True" SpinButtonPlacementMode="Inline"                                    />
        <ComboBox x:ConnectionId='8' x:Name="cmbDemo"                                             SelectedIndex="0" Width="200">
            <x:String>Red</x:String>
            <x:String>Green</x:String>
            <x:String>Blue</x:String>
        </ComboBox>
        <Button x:ConnectionId='9' Name="btnDemo"                       Content="Envoyer"/>
    </StackPanel>
</Window>

