<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Cours06.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cours06"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Cours06">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel>
        <TextBlock x:Name="tblDemo" Text="Tralala" FontSize="14"/>
        <TextBox x:Name="tbxDemo" Height="100" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <PasswordBox x:Name="pbDemo" PasswordChar="*" IsPasswordRevealButtonEnabled="True" Margin="20" Width="300" HorizontalAlignment="Left"/>
        <ToggleSwitch x:Name="swDemo" Toggled="swDemo_Toggled" OnContent="Oui" OffContent="Non"/>
        <Slider x:Name="sldDemo" Minimum="2" Maximum="140" Value="14" StepFrequency="2" ValueChanged="sldDemo_ValueChanged"/>
        <NumberBox x:Name="nbxDemo" Minimum="20" Maximum="500" Value="20" SmallChange="20" AcceptsExpression="True" SpinButtonPlacementMode="Inline" ValueChanged="nbxDemo_ValueChanged"/>
        <ComboBox x:Name="cmbDemo" SelectionChanged="cmbDemo_SelectionChanged" SelectedIndex="0" Width="200">
            <x:String>Red</x:String>
            <x:String>Green</x:String>
            <x:String>Blue</x:String>
        </ComboBox>
        <Button Name="btnDemo" Click="btnDemo_Click" Content="Envoyer"/>
    </StackPanel>
</Window>
