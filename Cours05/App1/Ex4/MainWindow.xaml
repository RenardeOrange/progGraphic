<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ex4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ex4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ex4">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel>
        <StackPanel>
            <TextBlock x:Name="tblNom" Text="Nom" FontSize="24"/>
            <TextBox x:Name="tbxNom" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:Name="tblPrenom" Text="Prenom" FontSize="24"/>
            <TextBox x:Name="tbxPrenom" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:Name="tblTelephone" Text="Telephone" FontSize="24"/>
            <TextBox x:Name="tbxTelephone" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:Name="tblEmail" Text="Email" FontSize="24"/>
            <TextBox x:Name="tbxEmail" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:Name="tblImage" Text="Photo de profil (lien)" FontSize="24"/>
            <TextBox x:Name="tbxImage" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <Button x:Name="btnCalcul" Click="btnCalcul_Click" Content="Profile"/>

        <TextBlock x:Name="tblReponse" FontSize="18"/>
        <Image x:Name="imgPhoto" Width="200" Height="200"/>
    </StackPanel>
</Window>
