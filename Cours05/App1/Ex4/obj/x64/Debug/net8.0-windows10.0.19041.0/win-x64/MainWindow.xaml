<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ex4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ex4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ex4">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel>
        <StackPanel>
            <TextBlock x:ConnectionId='13' x:Name="tblNom" Text="Nom" FontSize="24"/>
            <TextBox x:ConnectionId='14' x:Name="tbxNom" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:ConnectionId='11' x:Name="tblPrenom" Text="Prenom" FontSize="24"/>
            <TextBox x:ConnectionId='12' x:Name="tbxPrenom" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:ConnectionId='9' x:Name="tblTelephone" Text="Telephone" FontSize="24"/>
            <TextBox x:ConnectionId='10' x:Name="tbxTelephone" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:ConnectionId='7' x:Name="tblEmail" Text="Email" FontSize="24"/>
            <TextBox x:ConnectionId='8' x:Name="tbxEmail" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <StackPanel>
            <TextBlock x:ConnectionId='5' x:Name="tblImage" Text="Photo de profil (lien)" FontSize="24"/>
            <TextBox x:ConnectionId='6' x:Name="tbxImage" Width="200" HorizontalAlignment="Left" PlaceholderText="0,00"/>
        </StackPanel>

        <Button x:ConnectionId='2' x:Name="btnCalcul"                         Content="Profile"/>

        <TextBlock x:ConnectionId='3' x:Name="tblReponse" FontSize="18"/>
        <Image x:ConnectionId='4' x:Name="imgPhoto" Width="200" Height="200"/>
    </StackPanel>
</Window>

